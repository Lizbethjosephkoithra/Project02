<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myapplicationdev.project02.Main3Activity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Categories"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp">


        <Button
            android:id="@+id/fresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="30dp"
            android:text="Fresh Products" />

        <Button
            android:id="@+id/meatandseafood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="11"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp"
            android:layout_row="0"
            android:text="Meat and Seafood" />

        <Button
            android:id="@+id/bakery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_column="0"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_row="1"
            android:layout_toLeftOf="@+id/textView5"
            android:layout_toStartOf="@+id/textView5"
            android:text="       Bakery         " />

        <Button
            android:id="@+id/diarychill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="11"
            android:layout_marginBottom="30dp"
            android:layout_row="1"
            android:text="    Diary Chilled     " />

        <Button
            android:id="@+id/frozen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_row="2"
            android:text="       Frozen         " />

        <Button
            android:id="@+id/beverages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="11"
            android:layout_marginBottom="30dp"
            android:layout_row="2"
            android:text="       Beverages        " />

        <Button
            android:id="@+id/alcohols"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="27dp"
            android:layout_row="3"
            android:text="       Alcohols     " />

        <Button
            android:id="@+id/healthbeauty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="11"
            android:layout_row="3"
            android:text="Health and Beauty" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:layout_row="4"
            android:text="Toiletries" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="11"
            android:layout_row="4"
            android:text="Household"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"/>


    </GridLayout>

</RelativeLayout>